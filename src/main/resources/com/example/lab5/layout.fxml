<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane fx:controller="com.example.lab5.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10"
          vgap="10"
          prefHeight="475.0"
          prefWidth="600.0"
          stylesheets="@layout.css">
    <Label text="LBP Exchange Rate"
           textAlignment="CENTER" GridPane.columnSpan="2"
           GridPane.halignment="CENTER"
           styleClass="header"
    />
    <Label text="Buy USD Rate" GridPane.columnIndex="0"
           GridPane.rowIndex="4"
           styleClass="value" />
    <Label fx:id="buyUsdRateLabel" text="Buy Rate"
           GridPane.columnIndex="0" GridPane.rowIndex="5"
           styleClass="value-label" />
    <Label text="Sell USD Rate" GridPane.columnIndex="1"
           GridPane.rowIndex="4"
           styleClass="value"/>
    <Label fx:id="sellUsdRateLabel" text="Sell Rate"
           GridPane.columnIndex="1" GridPane.rowIndex="5"
           styleClass="value-label"/>
    <Separator orientation="HORIZONTAL" GridPane.RowIndex="6"
               GridPane.columnIndex="0" GridPane.columnSpan="2"/>

    <Label text="USD Amount" GridPane.columnIndex="0"
           GridPane.rowIndex="7"
           styleClass="value" />
    <Label text="LBP Amount" GridPane.columnIndex="1"
           GridPane.rowIndex="7"
           styleClass="value"/>
    <TextField fx:id="usdTextField" GridPane.columnIndex="0"
               GridPane.rowIndex="8" />
    <TextField fx:id="lbpTextField" GridPane.columnIndex="1"
                GridPane.rowIndex="8" />

    <RadioButton text="Buy USD" GridPane.columnIndex="0" GridPane.RowIndex="9">
        <toggleGroup>
            <ToggleGroup fx:id="transactionType"/>
        </toggleGroup>
    </RadioButton>
    <RadioButton text="Sell USD" toggleGroup="$transactionType" GridPane.columnIndex="0" GridPane.RowIndex="10"/>
    <Button text="Add Transaction" GridPane.columnIndex="1" GridPane.RowIndex="9"/>









</GridPane>
