<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" prefHeight="475.0" prefWidth="600.0" stylesheets="@rates.css" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.example.lab5.rates.Rates">
    <Label styleClass="header" text="LBP Exchange Rate" textAlignment="CENTER" GridPane.columnSpan="2" GridPane.halignment="CENTER" />
    <Label styleClass="value" text="Buy USD Rate" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <Label fx:id="buyUsdRateLabel" styleClass="value-label" text="Buy Rate" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <Label styleClass="value" text="Sell USD Rate" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <Label fx:id="sellUsdRateLabel" styleClass="value-label" text="Sell Rate" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    <Separator orientation="HORIZONTAL" GridPane.RowIndex="6" GridPane.columnIndex="0" GridPane.columnSpan="2" />

    <Label styleClass="value" text="USD Amount" GridPane.columnIndex="0" GridPane.rowIndex="7" />
    <Label styleClass="value" text="LBP Amount" GridPane.columnIndex="1" GridPane.rowIndex="7" />
    <TextField fx:id="usdTextField" GridPane.columnIndex="0" GridPane.rowIndex="8" />
    <TextField fx:id="lbpTextField" GridPane.columnIndex="1" GridPane.rowIndex="8" />

    <RadioButton text="Buy USD" GridPane.RowIndex="9" GridPane.columnIndex="0">
        <toggleGroup>
            <ToggleGroup fx:id="transactionType" />
        </toggleGroup>
    </RadioButton>
    <RadioButton text="Sell USD" toggleGroup="$transactionType" GridPane.RowIndex="9" GridPane.columnIndex="1" />
    <Button text="Add Transaction" prefHeight="25.0" prefWidth="320.0" GridPane.RowIndex="10" GridPane.columnIndex="0" GridPane.columnSpan="2" onAction="#addTransaction"/>











</GridPane>
